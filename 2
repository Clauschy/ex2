from sys import argv
script, user_name = argv
import random
prompt = '>'
print(f"Hi {user_name}! I am {script} and we are going to play a game.")
print("Please answer the questions as indicated: yes, no, or your free choice")
print(f"Do you like me, {user_name}?Yes/no")
answer = input (prompt)
if answer == "yes":
    print("You should be more careful")
else:
    print("I don't like you either!")

print("Let's play a game. You are in front of a door. Do you go in? yes/no")
door = input(prompt)

if door == "yes":
    print("Now chose a number between 1 and 10")
    number = int(input("Choose: "))
    if number == random.randint(1,10):
        print("Wow, you are a wizzard!")
    else:
        print("GAME OVER you will be eaten by a dragon!")

else:
    print("Coward, you are now blocked here for eternity!")
